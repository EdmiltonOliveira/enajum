<!DOCTYPE html>
<html>
  <head>
    <title>Enajum</title>
    <%= csrf_meta_tag %>
		

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

  <% if user_signed_in? %>
    <% controller_admin = (controller.class.name.split("::").first == 'Admin') %>
		<div class="bs-navmenu-offcanvas">
      <div id="myNavmenuCanvas">
        <% if controller_admin %>
          <nav id="myNavmenu" class="navmenu navmenu-inverse navmenu-fixed-left offcanvas" role="navigation">
            <a class="navmenu-brand" href="#">MENU</a>
            <ul class="nav navmenu-nav">
              <li><%= link_to 'Inscrição',admin_inscritos_path %></li>
              <li><%= link_to 'Grupos de trabalhos',admin_grupos_path %></li>
              <li><%= link_to 'Palestrantes',admin_palestrantes_path %></li>
              <li><%= link_to 'Perguntas',admin_perguntas_path %></li>
              <li><%= link_to 'Fotos',admin_fotos_path %></li>
              <li><%= link_to 'Ir para o Site',root_path %></li>
              <li><%= link_to 'Sair',destroy_user_session_path, method: :delete %></li>
            </ul>
          </nav>
        <% else %>
          <nav id="myNavmenu" class="navmenu navmenu-inverse navmenu-fixed-left offcanvas" role="navigation">
            <a class="navmenu-brand" href="#">MENU</a>
            <ul class="nav navmenu-nav">
  						<li class="dropdown-header">O Evento</li>
              <li><%= link_to 'Programação',programacao_index_path %></li>
              <li><%= link_to 'Palestrantes',palestrantes_path %></li>
              <li><%= link_to 'Fotos',fotos_path %></li>
              <li><%= link_to 'Grupos de trabalhos',grupos_path %></li>
  						<li class="dropdown-header">Participantes</li>
              <li><%= link_to 'Realizadores',realizadores_path %></li>
              <li><%= link_to 'Apoiadores',apoiadores_path %></li>
              <li><%= link_to 'Inscritos',inscritos_path %></li>
              <li class="dropdown-header">Mais opções</li>
              <% if current_user.admin %>
                <li><%= link_to 'Administração',admin_path %></li>
              <% end %>
              <li><%= link_to 'Sair',destroy_user_session_path, method: :delete %></li>
            </ul>
          </nav>
        <% end %>
        <% if controller_admin %>
        <div class="navbar navbar-inverse navbar-fixed-top">
        <% else %>
        <div class="navbar navbar-default navbar-fixed-top">
        <% end %>
          <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target="#myNavmenu" data-canvas="#myNavmenuCanvas" data-placement="left">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <p>
          	1º Encontro Nacional de<br>
          	Juízas e Juízes Negros
          </p>
        </div>
      </div>
    </div>
  <% end %>
    <div class="container">
      <%= flash_messages %>
    	<%= yield %>
    </div>

  </body>
</html>
