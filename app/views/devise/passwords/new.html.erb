      <div class="row main">
        <div class="panel-heading">
           <div class="panel-title text-center">
              <h1 class="title">ENAJUM</h1>
              <h4>Desbloqueio de Conta</h4>
              <hr />
            </div>
        </div> 
        <div class="main-login main-center">
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
					  <%= devise_error_messages! %>

            <div class="form-group">
              <label for="user_email" class="cols-sm-2 control-label">email</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon" style="font-weight: bold; font-size: 110%;">@</span>
                  <input type="email" class="form-control" id="user_email" name="user[email]"  placeholder="Informe o email"/>
                </div>
              </div>
            </div>

            <div class="form-group ">
              <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Enviar email</button>
            </div>
            <div class="login-register">
						  	<%= link_to "Retornar", new_session_path(resource_name), class: "btn btn-default btn-xs" %>
             </div>
          <% end %>
        </div>
      </div>
