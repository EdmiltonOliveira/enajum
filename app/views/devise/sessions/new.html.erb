      <div class="row main">
        <div class="panel-heading">
           <div class="panel-title text-center">
              <h1 class="title">ENAJUM</h1>
              <h4>Login</h4>
              <hr />
            </div>
        </div> 
        <div class="main-login main-center">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
            <div class="form-group">
              <label for="user_email" class="cols-sm-2 control-label">email</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon" style="font-weight: bold; font-size: 110%;">@</span>
                  <input type="email" class="form-control" id="user_email" name="user[email]"  placeholder="Informe o email"/>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="user_password" class="cols-sm-2 control-label">Senha</label>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                  <input type="password" class="form-control" id="user_password" name="user[password]"  placeholder="Informe a senha"/>
                </div>
              </div>
            </div>
            <div class="form-group ">
              <button type="submit" class="btn btn-primary btn-lg btn-block login-button">Acessar</button>
            </div>
            <div class="login-register">
                <%= link_to "Recuperar senha", new_password_path(resource_name), class: "btn btn-default btn-xs" %> or
                <%= link_to "Desbloquear conta", new_unlock_path(resource_name), class: "btn btn-default btn-xs" %>

             </div>
          <% end %>
        </div>
      </div>

