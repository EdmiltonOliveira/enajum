<h2 class="titulo">Grupos de trabalhos (GT)</h2>

<div class="row">
  <div class="col-xs-12" style="text-align: right;">
    <%= link_to new_admin_grupo_path, class: "btn btn-default btn-xs" do %>
      <i class="fa fa-plus" aria-hidden="true"></i> Novo GT
    <% end %>
  </div>
</div>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>#</th>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grupos.each do |grupo| %>
      <tr>
        <td><%= grupo.id %></td>
        <td><%= grupo.nome %></td>
        <td class="table-link"><%= link_to_show [:admin,grupo] %></td>
        <td class="table-link"><%= link_to_edit edit_admin_grupo_path(grupo) %></td>
        <td class="table-link"><%= link_to_destroy [:admin,grupo]%></td>
      </tr>
    <% end %>
  </tbody>
</table>

